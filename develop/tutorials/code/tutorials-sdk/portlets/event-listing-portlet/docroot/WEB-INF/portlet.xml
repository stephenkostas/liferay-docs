			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>my-created-events</portlet-name>
		<display-name>My Created Events</display-name>
		<portlet-class>
			com.liferay.docs.eventlisting.portlet.MyCreatedEvents
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/mycreatedevents/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
